<h1>Voici la liste des subventions proposées:</h1><br>

<div class="row">

  <% @subventions.each do |subvention| %>
  <div class="col-xs-6 col-sm-4">
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.1)), url(<%= subvention.photo %>);">
      <div class="card-category">A hauteur de <%= subvention.amount / 100 %>€</div>
      <div class="card-description">
        <h4><%= subvention.name %></h4>

      </div>
      <div class="card-user"><h5><%= subvention.subvention_requests.size %></h5>
        <p>participants</p>
      </div>
      <a class="card-link" href=<%= new_subvention_subvention_request_path(subvention) %> ></a>
    </div>
  </div>
  <% end %>

</div>
